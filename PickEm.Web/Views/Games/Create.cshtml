@model PickEm.Models.Game

@{
    ViewData["Title"] = "Create";
}

@{
    var teams = (List<PickEm.Models.Team>) ViewData["teams"];
}

<h1>Create</h1>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HomeTeamId" class="control-label">Home Team</label>
                <select asp-for="HomeTeamId" class="form-control" id="HomeTeamId" name="HomeTeamId">
                    <option value="">--- Select ---</option>
                    @foreach (var team in teams)
                    {
                        <option value=@team.TeamId>@team.Name</option>
                    }
                </select>
                <span asp-validation-for="HomeTeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayTeamId" class="control-label">Away Team</label>
                <select asp-for="AwayTeamId" class="form-control" id="AwayTeamId" name="AwayTeamId">
                    <option value="">--- Select ---</option>
                    @foreach (var team in teams)
                    {
                        <option value=@team.TeamId>@team.Name</option>
                    }
                </select>
                <span asp-validation-for="AwayTeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeScore" class="control-label"></label>
                <input asp-for="HomeScore" class="form-control" />
                <span asp-validation-for="HomeScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayScore" class="control-label"></label>
                <input asp-for="AwayScore" class="form-control" />
                <span asp-validation-for="AwayScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
