@model PickEm.ViewModels.GameCreateViewModel

@{
    ViewData["Title"] = "Create";
}


<h1>Create</h1>

<h4>GameModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="gameModel.HomeTeamId" class="control-label"></label>
                <select asp-for="gameModel.HomeTeamId" class="form-control">
                    <option value="">--- select ---</option>
                    @foreach (var team in Model.Teams)
                    {
                        <option value=@team.TeamId>@team.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="gameModel.AwayTeamId" class="control-label"></label>
                <select asp-for="gameModel.AwayTeamId" class="form-control">
                    <option value="">--- select ---</option>
                    @foreach (var team in Model.Teams)
                    {
                        <option value=@team.TeamId>@team.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="gameModel.HomeScore" class="control-label"></label>
                <input asp-for="gameModel.HomeScore" class="form-control" />
                <span asp-validation-for="gameModel.HomeScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="gameModel.AwayScore" class="control-label"></label>
                <input asp-for="gameModel.AwayScore" class="form-control" />
                <span asp-validation-for="gameModel.AwayScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="gameModel.Prediction" class="control-label"></label>
                <input asp-for="gameModel.Prediction" class="form-control" />
                <span asp-validation-for="gameModel.Prediction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
